<%- include('../partials/header') %>
<div class="container d-flex flex-column justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
    <h3 class="mb-3 text-center">Nouveau mot de passe</h3>
    <% if (error) { %>
      <div class="alert alert-danger" role="alert"><%= error %></div>
    <% } %>
    <% if (token) { %>
    <form method="POST" action="/reset-password/<%= token %>">
      <div class="mb-3">
        <label for="password" class="form-label">Nouveau mot de passe</label>
        <input type="password" class="form-control" id="password" name="password" required minlength="6" placeholder="Nouveau mot de passe">
      </div>
      <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirmer le mot de passe</label>
        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="6" placeholder="Confirmez le mot de passe">
      </div>
      <button type="submit" class="btn btn-primary w-100">Réinitialiser</button>
    </form>
    <% } else { %>
      <div class="alert alert-warning text-center">Lien de réinitialisation invalide ou expiré.</div>
    <% } %>
    <div class="mt-3 text-center">
      <a href="/login">Retour à la connexion</a>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>