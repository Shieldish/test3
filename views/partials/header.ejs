<header>
    <title><%= typeof title !== 'undefined' ? title : 'Accueil' %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles-home.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Dark/Light mode toggle
        function setMode(mode) {
            document.body.classList.toggle('darkmode', mode === 'dark');
            document.querySelectorAll('.login-container, .register-container, .main-content, .sidebar, .footer')
                .forEach(el => el.classList.toggle('darkmode', mode === 'dark'));
            localStorage.setItem('site-mode', mode);
            document.getElementById('toggle-mode-btn').classList.toggle('dark', mode === 'dark');
            document.getElementById('toggle-mode-btn').innerHTML = mode === 'dark' ? '<i class="fa-solid fa-sun"></i> Mode clair' : '<i class="fa-solid fa-moon"></i> Mode sombre';
        }
        function toggleMode() {
            const isDark = document.body.classList.contains('darkmode');
            setMode(isDark ? 'light' : 'dark');
        }
        window.addEventListener('DOMContentLoaded', function() {
            const saved = localStorage.getItem('site-mode');
            setMode(saved === 'dark' ? 'dark' : 'light');
        });
    </script>
</header>
